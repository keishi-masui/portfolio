.container
  = render "share/header"
  .portfolio-main
    .left
      .left__contents.clearfix
        %h2.portfolio-title
          = @product.name

        - if already_login?
          = link_to edit_product_path, class: "product_edit_link" do
            編集
            %i.fas.fa-pencil-alt
          = link_to product_path, method: :delete, class: "product_delete_link" do
            削除
            %i.fas.fa-trash-alt


        .details
          .detail.image
            .image-label
              イメージ
            .image-area
              = image_tag @product.image, class: "product-image", style: "width:300px;"

          .detail.language
            %span
              使用言語:
            %span{class:"language-area"}
              = @product.language

          .detail.comment
            .comment-label
              説明:
            .comment-area
              = @product.comment



    .right
      .right__contents
        .new_post
          = link_to new_product_path do
            new post


    .clearfix

  = render "share/footer"
