.container
  = render "share/header"
  .login-main
    %h2
      ログインしてね

    - if flash[:notice]
      .notice
        = flash[:notice]


    = form_for :session, url: sessions_login_path do |f|
      .login_content
        = f.label :name, class: "login-session-label"
        = f.text_field :name, class: "login-session-form_box"
      .login_content
        = f.label :password, class: "login-session-label"
        = f.text_field :password, class: "login-session-form_box"
      .login_content
        .form_button
          = f.submit 'ログイン'


